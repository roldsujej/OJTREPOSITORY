@model pcg.Models.VariationModel

@{
    ViewData["Title"] = "My Task";
}

<!-- Include the modal markup -->
<div class="modal" id="forwardModal" tabindex="-1" role="dialog">
    <!-- Modal content -->
</div>

<div class="container glowing-border">
    <div class="card text-center">
        <div class="card-header">
            Your Task
        </div>
        <div class="card-body">
            
            <!-- <a href="#" class="btn btn-primary">View All</a> -->
        </div>
        <div class="card-footer text-body-secondary">
        </div>
    </div>

    <div class="table-responsive">
        <table class="table table-striped table-bordered table-hover custom-table">
            <thead class="thead-dark">
                <tr>
                    <th class="text-center">Task No.</th>
                    <th class="text-center">Task</th>
                    <th class="text-center">Remarks</th>
                    <th class="text-center">Description</th>
                    <th class="text-center">Added By</th>
                    <th class="text-center">Date Forwarded</th>
                    <th class="text-center">Date Received</th>
                    <th class="text-center">Assigned To</th>
                    <th class="text-center">Action</th>
                </tr>
            </thead>
            <tbody id="myTable">
                <tr onclick="toggleRows(this)">
                    <td class="text-center">juan</td>
                    <td class="text-center">pedro</td>
                    <td class="text-center">berto</td>
                    <td class="text-center">rosa</td>
                    <td class="text-center">bartolome</td>
                    <td class="text-center">mira</td>
                    <td class="text-center">marites</td>
                    <td class="text-center">balong</td>
                    <td class="text-center">
                        <button type="button" class="btn btn-primary btn-sm" data-toggle="modal" data-target="#forwardModal">Forward</button>
                    </td>
                </tr>
                <!-- More rows can be added here -->
            </tbody>
        </table>
    </div>

</div>

<style>
    /* Glowing border effect */
    .glowing-border {
        border: 2px solid rgba(0, 0, 0, 0.1);
        border-radius: 10px;
        box-shadow: 0 0 10px #D1D1D1;
    }
</style>
